<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false">
    <class name="com.sgcc.dlsc.entity.po.DwGenerator" table="DW_GENERATOR">
    	<comment>基础信息_机组表</comment>
        <!-- single primaryKey -->
	    <id name="generatorid" type="string" length="36">
	    	<column name="GENERATORID">
    	        <comment>机组ID</comment>
	    	</column>
            <generator class="uuid.hex"/>
        </id>     
		
	    <property name="generatorname" type="string"  length="500"  not-null="true">
	    	<column name="GENERATORNAME">
    	        <comment>机组名称</comment>
	    	</column>
    	</property>  
         
	    <property name="stationid" type="string"  length="60"  not-null="true">
	    	<column name="STATIONID">
    	        <comment>所属发电企业</comment>
	    	</column>
    	</property>  
         
	    <property name="capacity" type="big_decimal"  length="16"  not-null="false">
	    	<column name="CAPACITY">
    	        <comment>装机容量</comment>
	    	</column>
    	</property>  
         
	    <property name="capacitylevel" type="big_decimal"  length="2"  not-null="false">
	    	<column name="CAPACITYLEVEL">
    	        <comment>容量等级</comment>
	    	</column>
    	</property>  
         
	    <property name="voltagegrade" type="big_decimal"  length="12"  not-null="false">
	    	<column name="VOLTAGEGRADE">
    	        <comment>电压等级</comment>
	    	</column>
    	</property>  
         
	    <property name="generatortype" type="big_decimal"  length="2"  not-null="false">
	    	<column name="GENERATORTYPE">
    	        <comment>机组类型</comment>
	    	</column>
    	</property>  
         
	    <property name="generatorsubtype" type="big_decimal"  length="4"  not-null="false">
	    	<column name="GENERATORSUBTYPE">
    	        <comment>机组子类型</comment>
	    	</column>
    	</property>  
         
	    <property name="opbegindate" type="date"  not-null="false">
	    	<column name="OPBEGINDATE">
    	        <comment>投运时间</comment>
	    	</column>
    	</property>  
         
	    <property name="gengroupid" type="string"  length="36"  not-null="false">
	    	<column name="GENGROUPID">
    	        <comment>所属发电集团</comment>
	    	</column>
    	</property>  
         
	    <property name="marketid" type="string"  length="36"  not-null="true">
	    	<column name="MARKETID">
    	        <comment>所属市场</comment>
	    	</column>
    	</property>  
         
	    <property name="geogrregionid" type="string"  length="36"  not-null="false">
	    	<column name="GEOGRREGIONID">
    	        <comment>地理位置</comment>
	    	</column>
    	</property>  
         
    </class>
</hibernate-mapping>